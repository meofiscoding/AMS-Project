@{
    ViewData["Title"] = "Class Detail";
}
<link rel="stylesheet" href="~/css/classDetails.css" />
<div class="tabview">
    <strong class="class-title" style="font-size: xx-large;"></strong>
    <button class="tablinks active">Class Work</button>
    <button class="tablinks">Submission</button>
    <button class="tablinks">People</button>
    <button class="tablinks">Groups</button>
</div>

<div id="tab1" class="tabcontent active">
    <div class="hero-element">
        <h1 id="stream-classname"></h1>
        <p id="stream-classcode"></p>
    </div>
    <div class="container mt-3">
        <div class="row col-md-12">
            <div class="col-md-3 up-coming">
                <strong>Nothing due in this week!!</strong>
            </div>
            <div class="col-md-9">
                <!-- Post input -->
                <div class="input-communication">
                    <div class="input-group mb-3 input-container">
                        <div class="col-12">
                            <div style="display: flex">
                                <i class="fa-solid fa-circle-user fa-2x" style="margin-right:20px"></i>
                                <textarea id="post-input" class="form-control" placeholder="Write something to class..." aria-label="Write something..." aria-describedby="basic-addon1" style="border:none" rows="1"></textarea>
                            </div>
                            <div class="selected-files"></div>
                        </div>
                        <div class="input-group mt-3 mb-1 file-attach">
                            <div class="attach-icon">
                                @* button with icon *@
                                <button class="btn btn-primary" type="button" id="upload-button">
                                    <i class="fa-solid fa-paperclip"></i> Add file
                                    <input type="file" class="file-input" id="upload-input" style="display:none;">
                                </button>
                            </div>
                            <button type="button" class="btn btn-primary btn-post">Post</button>
                        </div>
                    </div>
                </div>
                <!-- Post 1 -->
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="media">
                            <img class="mr-3 rounded-circle" src="avatar.jpg" alt="User Avatar" width="50" height="50">
                            <div class="media-body">
                                <h5 class="mt-0">John Doe</h5>
                                <p class="text-muted">Posted on January 1, 2023</p>
                            </div>
                        </div>
                        <hr>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed vel eleifend nisl, eu porttitor erat. Donec ac malesuada augue. In hac habitasse platea dictumst. Nulla feugiat ipsum vel nunc congue, nec bibendum velit malesuada. Proin sodales dui vel eleifend facilisis. Duis feugiat consequat lorem, ac efficitur quam gravida ut. Donec sit amet elit in orci malesuada auctor. Sed cursus est et enim pharetra, eget euismod arcu ultricies.</p>
                        <hr>
                        <div class="mb-3">
                            <a href="file.pdf">Attachment</a>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                <form>
                                    <div class="form-group">
                                        <textarea class="form-control" id="comment" rows="3" placeholder="Add a comment..."></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                Comments
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <div class="media">
                                        <img class="mr-3 rounded-circle" src="avatar.jpg" alt="User Avatar" width="50" height="50">
                                        <div class="media-body">
                                            <h5 class="mt-0">Jane Doe</h5>
                                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                                            <p class="text-muted">Posted on January 2, 2023</p>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="media">
                                        <img class="mr-3 rounded-circle" src="avatar.jpg" alt="User Avatar" width="50" height="50">
                                        <div class="media-body">
                                            <h5 class="mt-0">Bob Smith</h5>
                                            <p class="card-text">Nulla feugiat ipsum vel nunc congue, nec bibendum velit malesuada.</p>
                                            <p class="text-muted">Posted on January 3, 2023</p>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div id="tab2" class="tabcontent">
</div>

<div id="tab3" class="tabcontent">
    <div>
        <h3 style=" color: #0a5e15;">Teachers</h3>
        <ul id="teacher-list">
            <!-- The list of teachers will be dynamically generated here -->
        </ul>
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h3 style=" color: #0a5e15;">Students</h3>
            <strong class="add-student" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Student <i class="fa-solid fa-user-plus"></i></strong>
        </div>
        <ul id="student-list">
            <!-- The list of students will be dynamically generated here -->
        </ul>
    </div>
</div>

<div id="tab4" class="tabcontent">
</div>

<!-- Bootstrap modal which has an input search and a button invite-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="search-input" placeholder="Search for student" aria-label="Search for student">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="addToClass">Add to Class</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
    <script src="~/js/classDetails.js"></script>
   }